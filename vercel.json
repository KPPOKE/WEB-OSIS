{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.6.0",
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "buildCommand": "composer install --no-dev --prefer-dist --optimize-autoloader",
  "outputDirectory": "public/build",
  "routes": [
    { "src": "^/assets/(.*)$", "dest": "/public/assets/$1" },
    { "src": "^/storage/(.*)$", "dest": "/public/storage/$1" },
    { "src": "^(?!/api).*", "dest": "/api/index.php" }
  ]
}